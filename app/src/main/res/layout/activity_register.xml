<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_facebook_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team.polywuff.RegisterActivity">


    <EditText
        android:id="@+id/enteredEmail"
        android:layout_width="333dp"
        android:layout_height="45dp"
        android:hint="Email"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="133dp"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/enteredPassword"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/enteredPassword"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="219dp"
        android:layout_marginBottom="76dp"
        android:layout_above="@+id/confirmPassword"
        android:layout_alignLeft="@+id/enteredEmail"
        android:layout_alignStart="@+id/enteredEmail" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="325dp"
        android:layout_above="@+id/registerBTN"
        android:layout_alignRight="@+id/enteredPassword"
        android:layout_alignEnd="@+id/enteredPassword"
        android:layout_marginBottom="61dp" />

    <Button
        android:id="@+id/registerBTN"
        android:layout_width="146dp"
        android:layout_height="52dp"
        android:onClick="onClick"
        android:text="Register"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="438dp"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
